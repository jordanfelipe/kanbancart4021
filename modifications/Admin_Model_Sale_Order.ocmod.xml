            ]]></search>
            <add position="before"><![CDATA[
                
                public function getProductInfo(int $product_id): array {
                    $query = $this->db->query("SELECT * FROM " . DB_PREFIX . "product WHERE product_id = '" . $product_id . "'");
                    
                    if($query->num_rows) {
                        foreach ($query->rows as $row) {
                            $product_info[] = [
                                'location' => $row['location'],
                                'uom' => $row['uom']
                            ];
                        }
                        return $product_info;
                    }
                    else {
                        return [];
                    }
                }
        
            ]]></add>
        </operation>
		
