            <add position="before"><![CDATA[
                
                public function getLocation(int $product_id): string {
                    $query = $this->db->query("SELECT * FROM " . DB_PREFIX . "product WHERE product_id = '" . $product_id . "'");
                    
                    if($query->row['location']) {
                        return $query->row['location'];
                    }
                    else {
                        return "Not Found";
                    }
                }
        
            ]]></add>
